<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_reg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="52dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="25dp"
        android:id="@+id/et_username_reg"
        android:hint="请输入用户名" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/et_username_reg"
        android:layout_alignRight="@+id/et_username_reg"
        android:layout_alignEnd="@+id/et_username_reg"
        android:layout_marginTop="15dp"
        android:id="@+id/et_passwd1_reg"
        android:hint="请输入密码" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/et_passwd1_reg"
        android:layout_alignLeft="@+id/et_passwd1_reg"
        android:layout_alignStart="@+id/et_passwd1_reg"
        android:layout_marginTop="18dp"
        android:id="@+id/et_passwd2_reg"
        android:hint="请再次输入密码" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_below="@+id/et_passwd2_reg"
        android:layout_alignRight="@+id/et_passwd2_reg"
        android:layout_alignEnd="@+id/et_passwd2_reg"
        android:layout_marginTop="17dp"
        android:id="@+id/et_email_reg"
        android:hint="请输入emal" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:layout_below="@+id/et_email_reg"
        android:layout_alignLeft="@+id/et_email_reg"
        android:layout_alignStart="@+id/et_email_reg"
        android:layout_marginTop="18dp"
        android:id="@+id/et_phone_reg"
        android:hint="请输入电话号码" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/et_phone_reg"
        android:layout_alignLeft="@+id/et_phone_reg"
        android:layout_alignStart="@+id/et_phone_reg"
        android:layout_marginTop="17dp"
        android:id="@+id/et_idcard_reg"
        android:hint="请输入idcard" />

    <CheckBox
        android:text="司机"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_idcard_reg"
        android:layout_alignLeft="@+id/et_idcard_reg"
        android:layout_alignStart="@+id/et_idcard_reg"
        android:layout_marginTop="35dp"
        android:id="@+id/cb_isDrvier_reg" />

    <Button
        android:text="提交"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cb_isDrvier_reg"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="53dp"
        android:layout_marginEnd="53dp"
        android:id="@+id/bt_submit_reg" />
</RelativeLayout>
