<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_jnitest"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:text="测试无参jni接口"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="38dp"
        android:id="@+id/bt_jni_test1" />

    <Button
        android:text="测试传参int"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_jni_test1"
        android:layout_alignLeft="@+id/bt_jni_test1"
        android:layout_alignStart="@+id/bt_jni_test1"
        android:layout_marginTop="44dp"
        android:id="@+id/bt_jni_test2" />

    <Button
        android:text="测试bool类型"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bt_jni_test2"
        android:layout_toRightOf="@+id/bt_jni_test1"
        android:layout_toEndOf="@+id/bt_jni_test1"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:id="@+id/bt_jni_test3" />

    <Button
        android:text="测试String传参"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_jni_test2"
        android:layout_alignLeft="@+id/bt_jni_test2"
        android:layout_alignStart="@+id/bt_jni_test2"
        android:layout_marginTop="61dp"
        android:id="@+id/bt_jni_test4" />
</RelativeLayout>
